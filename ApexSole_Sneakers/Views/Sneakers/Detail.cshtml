@model ShoppingCart

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Sneakers.SneakersName - Sneaker Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin-top: 0px;
        }

        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .portfolio-item-heading h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .portfolio-item-heading small {
            font-size: 1.5rem;
            color: #6c757d;
        }

        .portfolio-item-row {
            margin-top: 30px;
        }

        .sneaker-image {
            border-radius: 10px;
            overflow: hidden;
        }

        .sneaker-details {
            padding-left: 30px;
        }

            .sneaker-details h3 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 1rem;
            }

            .sneaker-details ul {
                list-style-type: none;
                padding: 0;
            }

                .sneaker-details ul li {
                    margin-bottom: 0.5rem;
                }
    </style>
</head>
<body>
<div class="container">
    <!-- Portfolio Item Heading -->
    <div class="portfolio-item-heading">
        <h1>@Model.Sneakers.SneakersName</h1>
    </div>

    <!-- Portfolio Item Row -->
    <div class="row portfolio-item-row">
        <div class="col-md-8">
            <div class="sneaker-image">
                <img class="img-fluid" src="@Model.Sneakers.Image" alt="">
            </div>
        </div>
        <div class="col-md-4 sneaker-details">
                <h3>Деталі</h3>
            <ul>
                    <li><strong>Бренд:</strong> @Model.Sneakers.SneakersBrand</li>
                    <li><strong>Колір:</strong> @Model.Sneakers.SneakersColor</li>
                    <li><strong>Тип:</strong> @Model.Sneakers.SneakersType</li>
                    <li><strong>Ціна:</strong> @Model.Sneakers.SneakersPrice</li>
                    <li><strong>Стать:</strong> @Model.Sneakers.Gender</li>
                    <li><strong>Опис:</strong> @Model.Sneakers.SneakersDescription</li>
            </ul>
        </div>
    </div>
    <form method="post">
        <input hidden asp-for="ProductId" />
        <div class="row pl-2 mb-3">
            <div class="col-md-4">
                <div class="input-group mb-3">
                    <span class="input-group-text bg-primary text-white border-0 fw-semibold" id="inputgroup-sizing-default">
                        Кількість
                    </span>
                    <input asp-for="Count" type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-6 pb-1">
                <button type="submit" class="btn btn-primary bd-gradient w-100 py-2  text-uppercase fw-semibold">
                    Додати до кошика
                </button>
            </div>
        </div>
            <a class="btn btn-primary" asp-action="Preview3D" asp-route-modelUrl=" @Model.Sneakers.Preview3d">Переглянути 3D-модель</a>
    </form>
</div>
</body>
</html>
