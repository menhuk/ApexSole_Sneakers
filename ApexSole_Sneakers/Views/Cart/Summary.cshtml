@model ApexSole_Sneakers.ViewModels.ShoppingCartVM
<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
                            Кошик для покупок
						</h5>
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-danger btn-sm">Назад до кошика</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Деталі доставки:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Ім'я</label>
								</div>
								<div class="col-9">
                                    <input asp-for="OrderHead.Name" class="form-control" />
                                    <span asp-validation-for="OrderHead.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Телефон</label>
								</div>
								<div class="col-9">
                                    <input asp-for="OrderHead.PhoneNumber" class="form-control" />
									<span asp-validation-for="OrderHead.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Адреса вулиці</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHead.StreetAddress" class="form-control" />
									<span asp-validation-for="OrderHead.StreetAddress" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Місто</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHead.City" class="form-control" />
									<span asp-validation-for="OrderHead.City" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Область</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHead.State" class="form-control" />
									<span asp-validation-for="OrderHead.State" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Поштовий індекс</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHead.PostalCode" class="form-control" />
									<span asp-validation-for="OrderHead.PostalCode" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Зведення замовлення:</span>
							</h4>
                            <ul class="list-group mb-3">
								@foreach (var info in Model.ShoppingCartList)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <h6 class="my-0">@info.Sneakers.SneakersName</h6>
											<small class="text-muted">Кількість: @info.Count</small>
                                        </div>
                                        <span class="text-muted">@((info.Price*info.Count).ToString("c"))</span>
                                    </li>
                                }

                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <small class="text-info">Всього:</small>
									<strong class="text-info">@Model.OrderHead.total.ToString("c")</strong>
                                </li>
                            </ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">
                            Орієнтовна дата прибуття:
                            @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
						</p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Розмістити замовлення</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>